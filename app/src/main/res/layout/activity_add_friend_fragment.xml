<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addFriendFragment"
    tools:context=".groups.AddFriendFragment">

    <TextView
        android:id="@+id/fragmentbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:text=""
        tools:layout_editor_absoluteX="-16sp"
        tools:layout_editor_absoluteY="294sp" />

    <TextView
        android:id="@+id/addfriendbuttonbg"
        android:layout_width="350sp"
        android:layout_height="200sp"
        android:layout_marginTop="150sp"
        android:background="@color/blue_primary"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/friendcodebox"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_marginStart="25sp"
        android:backgroundTint="@color/blue_secondary"
        android:fontFamily="@font/acme"
        android:paddingLeft="5sp"
        android:text="@string/enter_friend_code"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/addfriendbuttonbg"
        app:layout_constraintStart_toStartOf="@+id/addfriendbuttonbg"
        app:layout_constraintTop_toTopOf="@+id/addfriendbuttonbg"
        app:layout_constraintVertical_bias="0.406" />

    <Button
        android:id="@+id/addFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32sp"
        android:layout_marginBottom="32sp"
        android:backgroundTint="@color/blue_secondary"
        android:fontFamily="@font/acme"
        android:padding="5sp"
        android:text="@string/add"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/addfriendbuttonbg"
        app:layout_constraintEnd_toEndOf="@+id/addfriendbuttonbg" />

    <Button
        android:id="@+id/exit"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginEnd="4sp"
        android:backgroundTint="@color/blue_secondary"
        android:text="@string/x"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/addfriendbuttonbg"
        app:layout_constraintTop_toTopOf="@+id/addfriendbuttonbg" />


</androidx.constraintlayout.widget.ConstraintLayout>

