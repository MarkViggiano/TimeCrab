<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <Button
        android:id="@+id/appearanceButton"
        android:layout_width="399sp"
        android:layout_height="75sp"
        android:layout_marginTop="80sp"
        android:backgroundTint="@color/timecrab_blue"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/appearance"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="15sp"
        app:layout_constraintEnd_toEndOf="@+id/plus1"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extension3" />

    <Button
        android:id="@+id/plus1"
        android:layout_width="86sp"
        android:layout_height="0sp"
        android:layout_marginTop="68sp"
        android:layout_marginEnd="4sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/plus_sign"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="50sp"
        app:cornerRadius="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extension3" />

    <Button
        android:id="@+id/preferencesButton"
        android:layout_width="399sp"
        android:layout_height="75sp"
        android:layout_marginTop="12sp"
        android:backgroundTint="@color/timecrab_blue"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/preferences"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton" />

    <TextView
        android:id="@+id/extension2"
        android:layout_width="399sp"
        android:layout_height="173sp"
        android:layout_marginTop="40sp"
        android:background="@color/timecrab_profile_blue2"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/preferencesButton" />

    <TextView
        android:id="@+id/extension3"
        android:layout_width="412sp"
        android:layout_height="157sp"
        android:background="@color/timecrab_profile_blue1"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="399sp"
        android:layout_height="75sp"
        android:layout_marginTop="12sp"
        android:backgroundTint="#159BFC"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/settings"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appearanceButton" />

    <TextView
        android:id="@+id/bottomBar"
        android:layout_width="415sp"
        android:layout_height="85sp"
        android:background="@color/blue_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="78sp"
        android:layout_height="70sp"
        android:layout_marginTop="24sp"
        android:layout_marginBottom="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="@+id/bottomBar"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="@+id/bottomBar"
        app:layout_constraintTop_toTopOf="@+id/bottomBar"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@drawable/calendar" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="@+id/bottomBar"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/bottomBar"
        app:layout_constraintTop_toTopOf="@+id/bottomBar"
        app:layout_constraintVertical_bias="0.523"
        app:srcCompat="@drawable/samplepfp" />

    <ImageButton
        android:id="@+id/groupsButton"
        android:layout_width="77sp"
        android:layout_height="70sp"
        android:layout_marginStart="4sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="4sp"
        android:layout_marginBottom="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="@+id/bottomBar"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="@+id/bottomBar"
        app:layout_constraintTop_toTopOf="@+id/bottomBar"
        app:layout_constraintVertical_bias="0.523"
        app:srcCompat="@drawable/groups" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="72sp"
        android:layout_height="70sp"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="@+id/bottomBar"
        app:layout_constraintHorizontal_bias="0.349"
        app:layout_constraintStart_toStartOf="@+id/bottomBar"
        app:layout_constraintTop_toTopOf="@+id/bottomBar"
        app:layout_constraintVertical_bias="0.516"
        app:srcCompat="@drawable/home" />

    <Button
        android:id="@+id/plus2"
        android:layout_width="86sp"
        android:layout_height="0sp"
        android:layout_marginTop="156sp"
        android:layout_marginEnd="4sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/plus_sign"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="50sp"
        app:cornerRadius="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extension3" />

    <Button
        android:id="@+id/plus3"
        android:layout_width="86sp"
        android:layout_height="0sp"
        android:layout_marginTop="240sp"
        android:layout_marginEnd="4sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/text_dash"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="50sp"
        app:cornerRadius="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extension3" />


</androidx.constraintlayout.widget.ConstraintLayout>